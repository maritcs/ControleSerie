@{
    ViewBag.Title = "Home";
}

<h2>Filtrar Série</h2>

<br />
<div class="row">
    <form class="form-inline">
        @*<div class="form-group">
            <label>Série</label>
            @Html.DropDownList("Serie")
        </div>*@
        <div class="form-group">
            <label>Canal de TV</label>
            @Html.DropDownList("CanalTV")
        </div>
        <button type="button" id="pesquisar" class="btn btn-primary">Pesquisar</button>
    </form>
</div>
<br />
<div class="row">
    <div id="resultados"></div>
    @*<ul id="resultados"><ul>*@
</div>


@section Scripts{
    <script>
        $(function () {


            $("#menuHome").addClass("active");

            $("#pesquisar").on("click", function () {
                var pesquisa = { CanalTvId: document.getElementById("CanalTV").value };


                $.getJSON("/home/pesquisar", pesquisa, function (data) {


                    var resultados = $("#resultados");


                    resultados.empty();


                    if (data.length == 0) {
                        resultados.append('<div class="alert alert-danger">Nenhuma série encontrada :(</div>');
                        return false;
                    }


                    for (var i = 0; i < data.length; i++) {
                        resultados.append('<div class="col-sm-6 col-md-4"><div class="thumbnail"><div class="caption"><h3>' + data[i].NomeSerie + '</h3></div><div></div>');
                    }


                });
                return true;
            });
        });
    </script>
}
